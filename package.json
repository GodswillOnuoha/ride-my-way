  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "fancy-log": "^1.3.2",
    "pg": "^7.4.3",
    "pg-promise": "^8.4.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
